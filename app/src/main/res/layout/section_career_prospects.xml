<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/spacing_large"
    android:background="?attr/colorSurfaceContainer"> <TextView
    android:id="@+id/career_section_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/prospek_karir_menjanjikan"
    android:textAppearance="@style/TextAppearance.App.HeadlineMedium" android:textColor="?attr/colorOnSurface"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/spacing_medium"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_career_prospects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2" tools:listitem="@layout/item_career_prospect"
        android:nestedScrollingEnabled="false"/>

</LinearLayout>