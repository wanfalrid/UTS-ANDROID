<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/spacing_large"
    android:background="?attr/colorSurfaceContainer"> <TextView
    android:id="@+id/promo_video_section_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/lihat_lebih_dekat_jurusan_rpl"
    android:textAppearance="@style/TextAppearance.App.HeadlineMedium" android:textColor="?attr/colorOnSurface" android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/spacing_large"/> <com.google.android.material.card.MaterialCardView
    android:id="@+id/video_thumbnail_container_card"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    style="@style/Widget.App.CardView.Elevated" app:cardBackgroundColor="?attr/colorSurface" app:cardPreventCornerOverlap="true"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/video_thumbnail_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/placeholder_video_thumbnail_rpl"
            android:contentDescription="@string/thumbnail_video_promosi_rpl"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_overlay_video_thumbnail"/> <ImageView
        android:id="@+id/play_button_overlay"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_play_button_overlay" android:layout_gravity="center"
        app:tint="@color/white" android:alpha="0.9"
        android:contentDescription="@string/tombol_play_video"/>
    </FrameLayout>
</com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/video_promo_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Video Profil Jurusan Rekayasa Perangkat Lunak PEI"
        android:textAppearance="@style/TextAppearance.App.TitleLarge" android:textColor="?attr/colorOnSurface"
        android:layout_marginTop="@dimen/spacing_medium"
        android:gravity="center_horizontal"
        android:paddingHorizontal="@dimen/spacing_small"/>

    <TextView
        android:id="@+id/video_promo_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="@dimen/line_spacing_multiplier_body"
        android:paddingHorizontal="@dimen/spacing_medium"
        android:textAppearance="@style/TextAppearance.App.BodyMedium"
        android:textColor="#616161"
        tools:text="Saksikan perjalanan seru mahasiswa RPL, fasilitas terkini, dan prospek karir yang menjanjikan." />

</LinearLayout>