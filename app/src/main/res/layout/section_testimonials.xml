<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/spacing_large"
    android:paddingBottom="@dimen/spacing_xlarge"
    android:paddingHorizontal="@dimen/spacing_large"
    android:background="?attr/colorSurface"> <TextView
    android:id="@+id/testimonials_section_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Apa Kata Mahasiswa Kami?"
    android:textAppearance="@style/TextAppearance.App.HeadlineMedium"
    android:textColor="?attr/colorOnSurface"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/spacing_large"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_testimonials"
        android:layout_width="match_parent"
        android:layout_height="220dp" android:clipToPadding="false"
        android:paddingStart="60dp" android:paddingEnd="60dp"/>

    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:id="@+id/dots_indicator_testimonials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/spacing_medium"
        app:dotsColor="?attr/colorOutline"
        app:selectedDotColor="?attr/colorPrimary"
        app:dotsCornerRadius="8dp"
        app:dotsSize="10dp"
        app:dotsSpacing="4dp"
        app:dotsWidthFactor="2.0"
        app:progressMode="false" />

</LinearLayout>