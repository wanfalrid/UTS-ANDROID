<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Widget.App.CardView.Elevated" android:layout_margin="@dimen/spacing_small" android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardUseCompatPadding="false"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/spacing_medium"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/course_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:contentDescription="@string/todo"
        app:tint="?attr/colorPrimary"
        tools:ignore="ImageContrastCheck"
        tools:src="@drawable/ic_course_placeholder_3d" />

    <TextView
        android:id="@+id/course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Pemrograman Mobile"
        android:textAppearance="@style/TextAppearance.App.TitleMedium" android:textColor="?attr/colorOnSurface" android:gravity="center"
        android:layout_marginBottom="@dimen/spacing_xsmall"/> <TextView
    android:id="@+id/course_description_short"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:text="Deskripsi singkat mata kuliah yang sangat menarik dan penuh tantangan."
    android:visibility="gone" android:textAppearance="@style/TextAppearance.App.BodySmall" android:textColor="?attr/colorOnSurfaceVariant" android:layout_marginTop="@dimen/spacing_small"
    android:gravity="center"
    android:lineSpacingMultiplier="@dimen/line_spacing_multiplier_body"/>
</LinearLayout>
</com.google.android.material.card.MaterialCardView>